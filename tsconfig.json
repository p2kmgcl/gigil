{
  "compilerOptions": {
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "WebWorker",
      "DOM"
    ],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "types/**/*"
  ]
}
